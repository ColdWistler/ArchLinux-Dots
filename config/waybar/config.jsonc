    // "cava_config": "$XDG_CONFIG_HOME/cava/cava.conf",
    "framerate": 24,
    "autosens": 1,
    "sensitivity": 2,
    "bars": 14,
    "lower_cutoff_freq": 50,
    "higher_cutoff_freq": 10000,
    "hide_on_silence": false,
    // "format_silent": "quiet",
    "method": "pulse",
    "source": "auto",
    "stereo": true,
    "reverse": false,
    "bar_delimiter": 0,
    "monstercat": false,
    "waves": false,
    "noise_reduction": 0.77,
    "input_delay": 2,
    "format-icons": ["▁", "▂", "▃", "▄", "▅", "▆", "▇", "█"],
    // CRITICAL FIX: Add empty scroll actions to prevent crashes/segfaults
    "on-scroll-up": "",
    "on-scroll-down": "",
    "actions": {
      "on-click-right": "mode",
    },
  },*/
  "hyprland/workspaces": {
    "disable-scroll": false,
    "all-outputs": true,
    "format": "{icon}",
    "format-icons": {
      "1": "一", // ICHI (One)
      "2": "二", // NI (Two)
      "3": "三", // SAN (Three)
      "4": "四", // SHI/YON (Four)
      "5": "五", // GO (Five)
      "default": "六", // ROKU (Six) - Used for any workspace above 5
    },
    "sort-by-number": true,
    "persistent-workspaces": {
      "1": [],
      "2": [],
      "3": [],
      "4": [],
      "5": [],
    },
  },

  // ===========================================================
  // CENTER & RIGHT MODULES (Standard)
  // ===========================================================

  "hyprland/window": {
    "format": "{}",
    "max-length": 50,
  },

  "custom/style_switcher": {
    "format": " Style",
    "on-click": "~/.config/hypr/scripts/wallpaper_switcher.sh",
    "tooltip": "Change Wallpaper/Theme",
  },

  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-bluetooth": "{icon} {volume}%",
    "format-muted": " Muted",
    "format-icons": {
      "headphone": "",
      "hands-free": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": ["", "", ""],
    },
    "scroll-step": 1,
    "on-click": "pavucontrol",
  },

  "battery": {
    "states": { "good": 95, "warning": 30, "critical": 15 },
    "format": "{icon} {capacity}%",
    "format-charging": " {capacity}%",
    "format-plugged": " {capacity}%",
    "format-icons": ["", "", "", "", ""],
  },

  "network": {
    "format-wifi": " {essid}",
    "format-ethernet": " Wired",
    "tooltip-format": "{ifname} via {gwaddr}",
    "format-linked": "{ifname} (No IP)",
    "format-disconnected": "⚠ Disconnected",
    "format-alt": "{ifname}: {ipaddr}/{cidr}",
  },

  "clock": {
    "format": " {:%I:%M %p}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": " {:%Y-%m-%d}",
  },

  "custom/power": {
    "format": " System",
    "on-click": "wlogout",
    "tooltip": false,
  },
}
