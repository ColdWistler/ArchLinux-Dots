{
  "layer": "top",
  "position": "top",
  "mod": "dock",
  "exclusive": true,
  "passthrough": false,
  "gtk-layer-shell": true,
  "height": 36,
  "spacing": 0, // IMPORTANT: Removes gaps so blocks can touch

  "modules-left": [
    // --- MENU SPLIT ---
    "custom/menu_icon",
    "custom/menu_label",

    // --- SHORTCUTS SPLIT (Pink > Grey > Dark Group) ---
    "custom/term_icon",
    "custom/web_icon",
    "custom/file_icon", // Contains Files, Editor, Gallery

    // --- MUSIC SPLIT ---
    "custom/music_icon",
    "custom/music_label",
    "cava",
  ],
  "modules-center": ["hyprland/window"],
  "modules-right": [
    "hyprland/workspaces",
    "custom/style_switcher",
    "pulseaudio",
    "battery",
    "network",
    "clock",
    "custom/power",
  ],

  // ===========================================================
  // LEFT MODULES (SPLIT LOGIC)
  // ===========================================================

  // 1. MENU
  "custom/menu_icon": {
    "format": "󰣇",
    "on-click": "wofi --show drun",
    "tooltip": false,
  },
  "custom/menu_label": {
    "format": "Menu",
    "on-click": "wofi --show drun",
    "tooltip": false,
  },

  // 2. SHORTCUTS
  "custom/term_icon": {
    "format": ">_",
    "on-click": "alacritty",
    "tooltip": "Terminal",
  },
  "custom/web_icon": {
    "format": "",
    "on-click": "firefox",
    "tooltip": "Web",
  },

  "custom/file_icon": {
    "format": "",
    "on-click": "dolphin",
    "tooltip": "Files",
  },

  // 3. MUSIC
  "custom/music_icon": {
    "format": "",
    "on-click": "playerctl play-pause",
    "tooltip": false,
  },
  "custom/music_label": {
    "format": "{}",
    // CHANGED: Use playerctl directly to fetch artist and title
    "exec": "playerctl metadata --format '{{artist}} - {{title}}' 2> /dev/null",
    "interval": 2, // Check for updates every 2 seconds
    "max-length": 30,

    // NEW: Use 'format-if' to display a static message when playerctl fails (no player running)
    "format-if": {
      "text": "󰎊 No Music Playing",
      "else": "{}",
    },

    "on-click": "playerctl play-pause",
  },
